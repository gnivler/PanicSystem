{
  "Name": "PanicSystem",

  "Enabled": true,

  "Version": "2.8",
  "Description": "Causes pilots to panic and eject based on multiple criteria.",
  "Author": "2.8 reworked design by don Zappo, balancing and testing by ganimal, and coding by gnivler, with original design by mpstark work by RealityMachina",
  "Website": "https://github.com/gnivler/PanicSystem",

  "DLL": "PanicSystem.dll",

  "Settings": {
    "Debug": false,
    "FloatieSpam": false;  /* enables floaties that show saving throws and rolling results */
    "EnableEjectPhrases": true, // set to true for floaties at eject
    
    /* Panic Settings */
    "PlayersCanPanic": true,
    "EnemiesCanPanic": true,
	"KnockedDownCannotEject": false,
    "ConsiderEjectingWithNoWeaps": false,
    "ConsiderEjectingWhenAlone": false,
	"LosingLimbAlwaysPanics": false,
    "OneChangePerTurn": false,
	"MinimumArmourDamagePercentageRequired": 5,

	/* Effect Modifiers */
    "UnsteadyModifier": 10,
    "PilotHealthMaxModifier": 30,
    "HeadMaxModifier": 30,
    "CenterTorsoMaxModifier": 75,
    "SideTorsoMaxModifier": 30,
    "LeggedMaxModifier": 20,
    "WeaponlessModifier": 15,
    "AloneModifier": 20,
    "MedianMorale": 25,
    "MoraleMaxModifier": 10,

	/* Ejection Bonuses and Limits */
    "GutsEjectionResistPerPoint": 5,
    "TacticsEjectionResistPerPoint": 0,	
	"BaseEjectionResist": 75,
	"MaxEjectChance": 50,
    "EjectChanceMultiplier": 0.5,
    
    /* Pilot Quirk Effects */
    "QuirksEnabled": true,
    "BraveModifier": 5,
    "DependableModifier": 5,

	/* Penalties To Panic States */
    "UnsettledAttackModifier": 1,
    "StressedAimModifier": 1,
    "StressedToHitModifier": -1,
    "PanickedAimModifier": 2,
    "PanickedToHitModifier": -2,

	/* Critical Panic */
	"MechHealthAlone": 25,     /* minimum health for 'Alone' last straw */
    "MechHealthForCrit": 85,   /* minimum health for panic crits to occur */
    "CritOver": 50            /* number by which a save must fail to cause a crit */
	}
}